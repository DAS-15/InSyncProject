<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountInfo">
    <TextView
        android:id="@+id/acc_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Account Details"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/name"
            android:layout_width="135dp"
            android:layout_height="40dp"
            android:text="Name:"
            android:textSize="25sp"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/acc_info" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="38dp"/>
    <TextView android:id="@+id/name_value"
              android:layout_width="330dp"
              android:layout_height="39dp"
              android:text="John Doe" android:textSize="25sp"
              android:layout_marginTop="11dp"
              app:layout_constraintTop_toBottomOf="@+id/name" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="38dp"/>
    <TextView android:id="@+id/email"
              android:layout_width="135dp"
              android:layout_height="40dp"
              android:text="Email:" android:textSize="25sp"
              android:layout_marginTop="26dp"
              app:layout_constraintTop_toBottomOf="@+id/name_value" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="38dp"/>
    <TextView
            android:id="@+id/email_value"
            android:layout_width="328dp"
            android:layout_height="43dp"
            android:text="abcd@xyz.com"
            android:textSize="25sp"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/email" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="38dp"/>
    <TextView
            android:id="@+id/classcode"
            android:layout_width="135dp"
            android:layout_height="40dp"
            android:text="ClassCode:"
            android:textSize="25sp"
            android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/email_value" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="38dp"/>
    <TextView
            android:id="@+id/classcode_value"
            android:layout_width="333dp"
            android:layout_height="35dp"
            android:text="abbd32bv2"
            android:textSize="25sp"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/classcode" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="38dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>